page{
  background-color: #F5F5F5;
}

.nav{
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  background-color: #fff;
  justify-content: space-between;
  display: flex;
  flex-direction: row;
  position: relative;
}

.nav-item{
  font-size: 28rpx;
  width: 20%;
  text-align: center;
  line-height: 80rpx;
  color: #666;
}

.active{
  color: #E46E47;
}
.navborder{
  position: absolute;
  width: 50rpx;
  height: 7rpx;
  background: #E46E47;
  border-radius: 5rpx;
  transition: all .4s;
  bottom: 0;
  box-shadow:0px 2px 2px #E46E47;
}